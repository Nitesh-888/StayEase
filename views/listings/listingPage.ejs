</div>



<div class="allLists">
    <% for(let i=0; i<allData.length; i++){ %>
        <div class="card" onclick="window.location.href='/listings/<%= allData[i]._id %>'">
            <img src="<%= allData[i].image.url %>" class="card-img-top" alt="image loaded">

            <div class="card-body">
                <h5 class="card-title"><b><%= allData[i].title %></b></h5>
                <p class="card-text"> <span class="prices">&#8377;<%= allData[i].price.toLocaleString('en-IN') %>/night</span> &nbsp; &nbsp; <i class="tax-infos">+18% GST</i></p>
            </div>
        </div>
    <%} %>
</div>

<div id="pagination-section">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item <%= page<=1?'disabled':'' %>"><a class="page-link" href="/listings?page=<%= page-1 %>">Previous</a></li>
            <li class="page-item "><a class="page-link <%= page<=2?'d-none':'' %>" href="/listings?page=<%= page-2 %>"><%= page-2 %></a></li>
            <li class="page-item"><a class="page-link <%= page<=1?'d-none':'' %>" href="/listings?page=<%= page-1 %>"><%= page-1 %></a></li>

            <li class="page-item active">
                <a class="page-link" href="/listings?page=<%= page %>" aria-current="page"><%= page %></a>
            </li>

            <li class="page-item"><a class="page-link <%= page>=maxPage?'d-none':'' %>" href="/listings?page=<%= page+1 %>"><%= page+1 %></a></li>
            <li class="page-item"><a class="page-link <%= page>=maxPage-1?'d-none':'' %>" href="/listings?page=<%= page+2 %>"><%= page+2 %></a></li>
            <li class="page-item <%= page>=maxPage?'disabled':'' %>"><a class="page-link" href="/listings?page=<%= page+1 %>">Next</a></li>
        </ul>
    </nav>
</div>
<% block('scripts').append('<script src="/js/listingPage.js"></script>') %>`