<% layout('layout') %>
<h1 class="mx-auto mt-2 text-danger"><b>Login</b></h1>
<form action="/login" method="post" novalidate class="needs-validation">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" type="text" placeholder="Enter the username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input id="password" name="password" type="password" placeholder="Enter the password" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-danger"><b>Login</b></button>
        </div>
    </div>
</form>
<a href="/auth/forgot-password" class="mx-auto mt-4"><button type="button" id="forget-pass" class="btn btn-danger"><b>Forgot Password?</b></button></a>
        