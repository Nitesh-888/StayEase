<% layout('layout') %>
<% block('styles').append('<link rel="stylesheet" href="/css/signup.css">') %>
<h1 class="mx-auto mt-2 text-danger"><b>SignUp</b></h1>
<form action="/signup" method="post" novalidate class="needs-validation">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input id="username" name="username" type="text" placeholder="Enter the username" class="form-control" required>
                <div class="valid-feedback">Look good!</div> 
                <div class="invalid-feedback">Give a username</div> 
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="email" placeholder="Enter the email" class="form-control" required>
                <div class="valid-feedback">Look good!</div> 
                <div class="invalid-feedback">Give a email</div> 
            </div>
            <div class="mb-3">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" placeholder="Enter the password" class="form-control" required>
                <div class="valid-feedback">Look good!</div> 
                <div class="invalid-feedback">Give a password</div>
            </div>
            <div class="mb-3"><button type="submit" class="btn btn-danger"><b>SignUp</b></button></div>
            <a href="/login">Already hava an account?</a>
        </div>
    </div>
</form>
        